---
import loomies from "../../assets/i18n/en.json";

const services = [
  {
    name: loomies.service1,
    description: loomies.service1Description,
  },
  {
    name: loomies.service2,
    description: loomies.service2Description,
  },
  {
    name: loomies.service3,
    description: loomies.service3Description,
  },
];
---

<section class="py-16 sm:py-20">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="flex flex-col gap-12 sm:gap-16">
      <h2 class="text-3xl font-medium tracking-tight sm:text-4xl" loom={loomies.servicesTitle}>
        {loomies.servicesTitle}</h2>
      <div class="grid gap-8 lg:grid-cols-3">
        {
          services.map((service) => (
            <div class="bg-primary-500/10 dark:bg-primary-400/10 flex flex-col gap-12 rounded-3xl px-6 py-8">
              <div class="flex flex-col gap-4">
                <h3 class="text-xl font-medium" loom={service.name}>{service.name}</h3>
                <p class="text-primary-950/70 dark:text-primary-200/70 text-base sm:text-lg" loom={service.description}>
                  {service.description}
                </p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
