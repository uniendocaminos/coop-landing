---
import loomies from "../../assets/i18n/en.json";

const stats = [
  {
    name: 'Years of Experience',
    value: '7',
  },
  {
    name: 'Members in the Project',
    value: '15',
  },
  {
    name: 'Products Made',
    value: '15000+',
  },
  {
    name: 'Stories of Overcoming Challenges',
    value: "50+",
  },
];
---

<section class="py-16 sm:py-20">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="grid gap-16 lg:grid-cols-2 lg:gap-24">
      <img
        class="mx-auto h-auto w-full max-w-xl rounded-3xl"
        width="576"
        height="864"
        src="/assets/B.png"
        alt="Our experts working together"
      />
      <div class="flex flex-col gap-10">
        <!-- Mission description -->
        <div class="space-y-8 sm:space-y-12">
          <h2 class="text-3xl font-medium tracking-tight sm:text-4xl" loom={loomies.AboutContentTitle}>{loomies.AboutContentTitle}</h2>
          <div class="space-y-6">
            <p class="text-primary-950/70 dark:text-primary-200/70 text-base sm:text-lg" loom={loomies.AboutContentContentA}>
              {loomies.AboutContentContentA}
            </p>
            <p class="text-primary-950/70 dark:text-primary-200/70 text-base sm:text-lg" loom={loomies.AboutContentContentB}>
              {loomies.AboutContentContentB}
            </p>
            <p class="text-primary-950/70 dark:text-primary-200/70 text-base sm:text-lg" loom={loomies.AboutContentContentC}>
              {loomies.AboutContentContentC}
            </p>
          </div>
        </div>

        <!-- Stats -->
        <dl class="grid grid-cols-1 gap-6 sm:grid-cols-2">
          {
            stats.map((stat) => (
              <div class="border-primary-900/10 dark:border-primary-300/10 rounded-3xl border p-6">
                <dt class="text-base" loom={stat.name}>{stat.name}</dt>
                <dd class="text-3xl font-medium tracking-tight" loom={stat.value}>{stat.value}</dd>
              </div>
            ))
          }
        </dl>
      </div>
    </div>
  </div>
</section>
